<mvc:View
    controllerName="PersonalAssistantUI.controller.Login" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
     xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    height="100%">
    
  <!-- ShellBar as fixed header -->
  <f:ShellBar 
       class="customShellBar"
      homeIcon="{oGlobalAIModel>/applicationDetails/logoPath}"
      showCopilot="false"
      showSearch="false"
      showNotifications="false" >
 
      <f:profile>
          <Avatar id="userAvatarBtn" initials="{oGlobalAIModel>/userDetails/initial}" press=".onUserAvatarPress" />
      </f:profile>
  </f:ShellBar>
    <Page showHeader="false" enableScrolling="true" class="sapUiResponsivePadding">
        <content>
        
            <VBox height="450px"  width="100%" class="sapUiContentPadding"
                fitContainer="true" alignItems="Center" justifyContent="Center" >
                <!-- Login/Signup Form -->
                <VBox justifyContent="Center" alignItems="Center" class="loginForm">
                    <!-- Logo (optional) -->
                    <Image src="{oGlobalAIModel>/applicationDetails/logoPath}" width="250px" height="auto" class="loginLogo"/>

                    <!-- Login/Signup Header -->
                    <Label text="{i18n>LOGIN_TO_YOUR_ACCOUNT_LABEL}" class="loginTitle"/>

                    <!-- Username / Mobile Number -->
                    <Input placeholder="{i18n>USERNAME_INPUT_PLACEHOLDER}" class="inputField" type="Text"/>

                    <!-- Password -->
                    <Input placeholder="{i18n>PASSWORD_PLACEHOLDER}" class="inputField" type="Password"/>

                    <!-- Login Button -->
                    <Button text="{i18n>LOGIN_BTN}" type="Emphasized" class="loginButton" press="onLoginPress"/>

                    <!-- Signup Button -->
                    <Label text="{i18n>DONT_HAVE_ACCOUNT_LABEL}" class="signupText"/>
                    <Button text="{i18n>SIGN_UP_BTN}" type="Transparent" class="signupButton"/>
                </VBox>
            </VBox>
        </content>
        <!-- Footer -->
        <footer>
            <Bar design="Footer">
                <contentMiddle>
                    <Text text="{oGlobalAIModel>/applicationDetails/footerName}" />
                </contentMiddle>
            </Bar>
        </footer>
    </Page>
</mvc:View>
