<mvc:View
  controllerName="PersonalAssistantUI.controller.Dashboard"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <!-- ShellBar as fixed header -->
  <f:ShellBar
      id="menuBar"
      title="Dashboard"
      class="customShellBar"
      homeIcon="/image/pravzyraally.png"
      showCopilot="false"
      showSearch="false"
      showNotifications="false"
      visible="{oGlobalAIModel>/menuBar/menuVisible}">

      <f:additionalContent>
          <!-- Custom AI Assistant -->
          <Button
              id="aiButton"
              icon="sap-icon://da"
              type="Transparent"
              tooltip="AI Assistant"
              press="onCopilotPress" />

          <!-- Custom Notifications -->
          <Button
              id="customNotificationBtn"
              icon="sap-icon://bell"
              type="Transparent"
              tooltip="Notifications"
              press="onUserNotificationPress" />
      </f:additionalContent>

      <f:menu>
          <Menu items="{
                path: 'oGlobalAIModel>/userDetails/assignedMenu'
            }">
              <MenuItem
                text="Dashboard"
                icon="sap-icon://flight" /> 
                <MenuItem
                text="{oGlobalAIModel>header}"
                icon="{oGlobalAIModel>icon}" />
          </Menu>
      </f:menu>
  
      <f:profile>
          <Avatar id="userAvatarBtn" initials="PK" press=".onUserAvatarPress" />
      </f:profile>
  </f:ShellBar>

  <!-- Main Page Content (no extra padding) -->
  <Page id="dashboardPage" showHeader="false" class="noPaddingPage">
      <content>
          <VBox class="tile-container" alignItems="Center" justifyContent="Center" width="100%" height="100%">
              <HBox  items="{
      path: 'oGlobalAIModel>/userDetails/assignedMenu'
  }">
                  <!-- Dynamically bound tiles -->
                  
  <GenericTile
      header="{oGlobalAIModel>header}"
      subheader="{oGlobalAIModel>subheader}"
      state="Loaded"
      class="{oGlobalAIModel>tileClass}"
      press=".onTilePress">
      <TileContent footer="{oGlobalAIModel>footer}">
          <NumericContent
              withMargin="false"
              value="{oGlobalAIModel>value}"
              valueColor="{oGlobalAIModel>valueColor}"
              indicator="{oGlobalAIModel>indicator}"
              scale="{oGlobalAIModel>scale}" />
      </TileContent>
  </GenericTile>
              </HBox>
          </VBox>
      </content>
  </Page>
</mvc:View>
